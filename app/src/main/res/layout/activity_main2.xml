<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zhao.test.com.mytest.Main2Activity">

    <Button
        android:text="启动服务"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:id="@+id/start_service"/>

    <Button
        android:text="关闭服务"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_service"
        android:layout_alignLeft="@+id/start_service"
        android:layout_alignStart="@+id/start_service"
        android:id="@+id/destroy_service"/>

    <Button
        android:text="绑定服务"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/destroy_service"
        android:layout_alignLeft="@+id/destroy_service"
        android:layout_alignStart="@+id/destroy_service"
        android:id="@+id/binder_service"/>

    <Button
        android:text="解绑服务"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/binder_service"
        android:layout_alignLeft="@+id/binder_service"
        android:layout_alignStart="@+id/binder_service"
        android:id="@+id/unbinder_service"/>
</RelativeLayout>
